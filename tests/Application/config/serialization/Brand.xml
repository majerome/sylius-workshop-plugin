            <group>shop:brands:read</group>
            <group>admin:brand:read</group>
            <group>shop:brand:read</group>
        </attribute>
        <attribute name="updatedAt">
            <group>admin:brands:read</group>
            <group>shop:brands:read</group>
            <group>admin:brand:read</group>
            <group>shop:brand:read</group>
        </attribute>
        <attribute name="products">
            <group>admin:brand:read</group>
            <group>shop:brand:read</group>
        </attribute>
        <attribute name="channels">
            <group>admin:brands:read</group>
            <group>admin:brand:read</group>
        </attribute>
    </class>

</serializer>
